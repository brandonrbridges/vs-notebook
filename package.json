{
	"name": "vs-notes",
	"displayName": "VS Notes",
	"description": "Quickly take developer notes inline and across your workspace",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/brandonbridges/vs-notes.git"
	},
	"author": {
		"name": "Brandon Bridges",
		"email": "brandonrbridges@outlook.com"
	},
	"publisher": "brandonbridges",
	"engines": {
		"vscode": "^1.102.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "VS Notes",
			"properties": {
				"vs-notes.groupBy": {
					"type": "string",
					"enum": [
						"none",
						"file",
						"tag"
					],
					"enumDescriptions": [
						"No grouping - show all notes in a flat list",
						"Group notes by file - show notes grouped by the file they belong to",
						"Group notes by tag - show notes grouped by their tags"
					],
					"default": "file",
					"description": "How to group notes in the VS Notes view?"
				}
			}
		},
		"menus": {
			"view/title": [
				{
					"command": "vs-notes.openSettings",
					"when": "view == vsnotesView",
					"group": "navigation",
					"icon": "./src/icons/gear.svg"
				}
			],
			"view/item/context": [
				{
					"command": "vs-notes.deleteNote",
					"when": "view == vsnotesView && viewItem == noteItem",
					"group": "inline"
				},
				{
					"command": "vs-notes.renameNote",
					"when": "view == vsnotesView && viewItem == noteItem",
					"group": "inline"
				}
			]
		},
		"commands": [
			{
				"command": "vs-notes.openSettings",
				"title": "Open VS Notes Settings",
				"icon": {
					"light": "./src/icons/gear.svg",
					"dark": "./src/icons/gear.svg"
				}
			},
			{
				"command": "vs-notes.createNote",
				"title": "Create Note"
			},
			{
				"command": "vs-notes.deleteNote",
				"title": "Delete Note"
			},
			{
				"command": "vs-notes.renameNote",
				"title": "Rename Note"
			},
			{
				"command": "vs-notes.openNotesForLine",
				"title": "Open Notes for Line"
			},
			{
				"command": "vs-notes.openNotesForRange",
				"title": "Open Notes for Range"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vs-notes",
					"title": "VS Notes",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"vs-notes": [
				{
					"id": "vsnotesView",
					"name": "My Notes",
					"icon": "media/icon.svg",
					"canSelectMany": false,
					"canSearch": true
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.102.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"eslint": "^9.25.1",
		"esbuild": "^0.25.3",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.8.3",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2"
	},
	"dependencies": {
		"@vscode/codicons": "^0.0.38"
	}
}
